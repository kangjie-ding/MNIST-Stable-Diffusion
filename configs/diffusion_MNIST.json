{
    "data_settings":{
        "dataset_name": "MNIST",
        "batch_size": 128,
        "latent_dim": 64,
        "channels": 1
    },

    "model_settings":{
        "time_steps": 1000,
        "channel_mul_layer": [1, 2, 2],
        "attention_mul": [1, 2, 4],
        "text_embedding_dim": 512,
        "num_head": 4,
        "add_2d_rope": false
    },
    
    "training_settings":{
        "epochs": 50,
        "lr":5e-4, 
        "accumulation_steps": 10,
        "amp_dtype": "float16",
        "grad_clip_norm": 1.0
    },
    "path_settings":{
        "weight_save_dir": "outputs",
        "log_dir": "logs"
    }
}